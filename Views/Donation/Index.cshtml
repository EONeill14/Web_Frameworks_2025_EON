@{
    ViewData["Title"] = "Donate";
}

<div class="text-center">
    <h1 class="display-4">Support Our Community</h1>
    <p class="lead">Your donation helps us keep this service running.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="CreateCheckoutSession" asp-controller="Donation" method="post">
            <div class="form-group mb-3">
                <label for="amount" class="form-label">Donation Amount (€)</label>
                <input name="amount" class="form-control" type="number" min="5" value="5" />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Donate Now</button>
            </div>
        </form>
    </div>
</div>