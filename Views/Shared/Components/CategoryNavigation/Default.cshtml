@model IEnumerable<Web_Frameworks_2025_EON.Models.Category>

<div class="d-grid gap-2">
    <a asp-controller="Items" asp-action="Index" asp-route-category=""
       class="btn btn-block @(ViewBag.SelectedCategory == null ? "btn-primary" : "btn-outline-secondary")">
        All Items
    </a>

    @foreach (var category in Model)
    {
        <a asp-controller="Items" asp-action="Index" asp-route-category="@category.Name"
           class="btn btn-block @(category.Name == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")">
            @category.Name
        </a>
    }
</div>